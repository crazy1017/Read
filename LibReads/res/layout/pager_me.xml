<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f7"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_items_hight"
        android:background="@color/white" >

        <com.mzp.libreads.common.circleimageview.CircleImageView
            android:id="@+id/iv_me_photo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/avatar_default"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/tv_me_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="8dp"
            android:text="@string/app_name"
            android:textColor="@color/color_526296"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/tv_me_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_me_name"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="4dp"
            android:text="@string/app_name"
            android:textColor="@color/color_526296"
            android:textSize="@dimen/text_15" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_me_reads"
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_items_hight_other"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_contact_item"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="我的借阅"
        android:textColor="@color/color_526296"
        android:textSize="@dimen/text_16" />

    <TextView
        android:id="@+id/tv_me_dayly"
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_items_hight_other"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_contact_item"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="夜间模式"
        android:textColor="@color/color_526296"
        android:textSize="@dimen/text_16" />

    <TextView
        android:id="@+id/tv_me_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_items_hight_other"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_contact_item"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="是否接收推送消息"
        android:textColor="@color/color_526296"
        android:textSize="@dimen/text_16" />

    <TextView
        android:id="@+id/tv_me_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_items_hight_other"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_contact_item"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="是否检测更新"
        android:textColor="@color/color_526296"
        android:textSize="@dimen/text_16" />
    
    <TextView
        android:id="@+id/tv_me_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_items_hight_other"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_contact_item"
        android:gravity="center"
        android:text="登出"
        android:textColor="@color/color_ff0000"
        android:textSize="@dimen/text_16" />
    
    <TextView
        android:id="@+id/tv_me_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_items_hight_other"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_contact_item"
        android:gravity="center"
        android:text="退出当前账号"
        android:textColor="@color/color_ff0000"
        android:textSize="@dimen/text_16" />

</LinearLayout>